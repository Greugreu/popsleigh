{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.title) }}</div>
    <div class="col-md-4">{{ form_row(form.start) }}</div>
    <div class="col-md-4">{{ form_row(form.destination) }}</div>
</div>
<div class="row">
    <div class="col-md-2">{{ form_row(form.seats) }}</div>
    <div class="col-md-2">{{ form_row(form.price) }}</div>
    <div class="col-md-2">{{ form_row(form.time) }}</div>
    <div class="col-md-2">{{ form_row(form.type) }}</div>
</div>
<div class="row">
    <div class="col-md-2">{{ form_row(form.participation) }}</div>
    <div class="col-md-1">{{ form_row(form.full) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}
