{% extends 'base.html.twig' %}

{% block title property.title %}


{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>Départ de {{ property.start }} - {{ property.seats }} places restantes</h2>
                    <div class="text-primary" style="font-size: 4rem; font-weight: bold;">{{ property.formattedPrice }} €</div>
                    <a href="#" class="btn btn-primary">Contacter le conducteur</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped">
                    <tr>
                        <td>Destination</td>
                        <td>{{ property.destination }}</td>
                    </tr>
                    <tr>
                        <td>Type d'évènement</td>
                        <td>{{ property.type }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h3>Spécificités</h3>
            </div>
        </div>
    </div>

{% endblock %}


