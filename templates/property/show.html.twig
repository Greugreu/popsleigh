{% extends 'base.html.twig' %}

{% block title property.title %}


{% block body %}
    <div class="jumbotron">
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% if not form.vars.valid %}
               <div class="alert alert-danger">
                   Erreur dans le formulaire
               </div>
            {% endif %}
            <div class="row">
                <div class="col-md-8">
                    {% if property.filename %}
                        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }}" alt="card-img-top"
                             style="width: 100%; height:auto;">
                    {% else %}
                        <img src="{{ '/images/properties/empty.jpg' | imagine_filter('medium') }}" alt="card-img-top"
                             style="width: 100%; height:auto;">

                    {% endif %}
                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>Départ de {{ property.start }} <br> {{ property.seats }} places restantes</h2>
                    <div class="text-primary" style="font-size: 4rem; font-weight: bold;">{{ property.formattedPrice }} €</div>
                    <a href="#" class="btn btn-primary" id="contactButton" {% if form.vars.submitted %} style="display: none" {% endif %}>Contacter le conducteur</a>
                    <div id="contactForm" class="mt-4" {% if not form.vars.submitted %} style="display: none" {% endif %}>
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col">{{ form_row(form.firstname) }}</div>
                            <div class="col">{{ form_row(form.lastname) }}</div>
                        </div>
                        <div class="row">
                            <div class="col">{{ form_row(form.phone) }}</div>
                            <div class="col">{{ form_row(form.email) }}</div>
                        </div>
                        {{ form_rest(form) }}
                        <div class="form-group">
                            <button class="btn-primary">Envoyer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped">
                    <tr>
                        <td>Destination</td>
                        <td>{{ property.destination }}</td>
                    </tr>
                    <tr>
                        <td>Type d'évènement</td>
                        <td>{{ property.eventType }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h3>Spécificités</h3>
                <ul class="list-group">
                    {% for option in property.options %}
                        <li class="list-group-item">{{ option.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}


